<% if flash[:error] %>
<% flash[:error].each do |e| %>
<p><%= e %></p>
<%end%>
<%end%>

<%= form_for @heroine do |f| %>
<%= f.label "Name:" %>
<%= f.text_field :name %>
<br />
<%= f.label "Super Name:" %>
<%= f.text_field :super_name %>
<br/>
<%= f.label "Super Power:" %>
<%= f.collection_select :power_id, Power.all, :id, :name, {:prompt => "Please Select Super Power"}%>
<%= f.submit %>
<% end %>