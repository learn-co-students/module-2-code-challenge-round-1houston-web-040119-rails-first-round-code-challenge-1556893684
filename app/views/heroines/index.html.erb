<h2>All Heroines</h2>

<%= form_tag("/heroines", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<% if @result %>
<ul>
  <% @searched_heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine %>
    </li>
    <br>
  <% end %>
</ul>
<% else %>
  <% @heroines.each do |heroine|  %>
    <%= link_to heroine.super_name, heroine %>
  <% end %>
  

<% end %>

