<h2>All Heroines</h2>

<%= form_tag(controller: 'heroines', action: 'search', method: :post) do %>
  <h3><%= label_tag(:power, "Search by Superpower:") %></h3><br>
  <%= text_field_tag :power %>
  <%= submit_tag("Search") %>
<% end %>

<p>
  <% if flash[:error] %>
    <%= flash[:error] %>
  <% end %>
</p>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine_path(heroine) %>
    </li>
    <br>
  <% end %>
</ul>
