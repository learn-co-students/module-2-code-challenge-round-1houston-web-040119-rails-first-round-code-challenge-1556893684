<h2>All Heroines</h2>

<%= form_tag(controller: 'heroines', action: 'search', method: :post) do %>
  <h2><%= label_tag(:power, "Search by Superpower:") %></h2><br>
  <%= text_field_tag :power %>
  <%= submit_tag("Search") %>
<% end %>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine_path(heroine) %>
    </li>
    <br>
  <% end %>
</ul>
