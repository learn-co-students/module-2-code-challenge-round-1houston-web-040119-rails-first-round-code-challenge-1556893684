<h1>Create New Heroine</h1>

<ul><% if flash[:error] %>
<% flash[:error].each do |error| %>
<p><%= error %></p>
<% end %>
<% end %>
</ul>

<%= form_for @heroine do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :super_name %>
<%= f.text_field :super_name %>
<br>
<label>Power:</label>
<%= f.collection_select :power_id, Power.all, :id, :name %>
<br>
<%= f.submit %>
<br>
<% end %>